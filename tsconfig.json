{
  "compilerOptions": {
      "target": "es6",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strictNullChecks": true,
      "removeComments": false,
      "sourceMap": true,
      "declaration": true,
      "newLine": "LF",
      "noEmitOnError": true,
      // "noUnusedLocals": true,
      "noImplicitThis": true,
      // "noImplicitAny": true,
      "noFallthroughCasesInSwitch": true,
      "lib": ["es5", "es2015.core", "es2015.promise", "es2015.collection", "es2015.iterable"]
  }
}
